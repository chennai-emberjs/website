<div class="flex flex-col mx-8 my-6">
  <div class="speaker-item rounded-xl overflow-hidden shadow-xl">
    <img src={{@speaker.profilePic}} class="h-full w-full object-cover" alt="">
  </div>
  <div class="flex-full-center -mt-4">
    <span class="speaker-name bg-orange-300 px-4 py-1 text-white font-bold rounded tracking-wide">
      {{@speaker.speaker}}
    </span>
  </div>
  {{#if @speaker.handle}}
    <a
      class="flex-full-center mt-1 text-dark-teal text-lg hover:underline"
      href={{@speaker.profileLink}}
      target="_blank"
      rel="noopener"
    >
      {{@speaker.handle}}
    </a>
  {{/if}}
</div>