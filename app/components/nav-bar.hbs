<div class="fixed w-full bg-violet z-50 py-4 px-2">
  <div class="container mx-auto">
    <nav class="flex items-center justify-between flex-wrap">
      <LinkTo @route="index" class="flex items-center flex-no-shrink text-white no-underline mr-6">
        <span class="font-semibold text-xl tracking-tight">Chennai EmberJS</span>
      </LinkTo>
      <div class="block sm:hidden">
        <button
          class="navbar-burger flex items-center px-3 py-2 border rounded text-white border-white hover:text-white hover:border-white"
          {{on "click" this.toggleExpanded}}>
          <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
          </svg>
        </button>
      </div>
      <div id="main-nav" 
          class="w-full flex-grow justify-end sm:flex items-center sm:w-auto {{unless this.isExpanded "hidden"}}">
        <div {{on "click" this.toggleExpanded}}>
          <LinkTo
              @route="schedule" 
              class="no-underline font-bold block mt-4 sm:mt-0 sm:inline-block text-grey-light hover:text-yellow mr-4">
            Schedule
          </LinkTo>
        </div>
        <div {{on "click" this.toggleExpanded}}>
          <LinkTo
            @route="location" 
            class="no-underline font-bold block mt-4 sm:mt-0 sm:inline-block text-grey-light hover:text-yellow mr-4">
            Location
          </LinkTo>
        </div>
        <div {{on "click" this.toggleExpanded}}>
          <LinkTo
            @route="about" 
            class="no-underline font-bold block mt-4 sm:mt-0 sm:inline-block text-grey-light hover:text-yellow mr-4">
            About
          </LinkTo>
        </div>
        <div {{on "click" this.toggleExpanded}}>
          <LinkTo
            @route="sponsors" 
            class="no-underline font-bold block mt-4 sm:mt-0 sm:inline-block text-grey-light hover:text-yellow mr-4">
            Sponsors
          </LinkTo>
        </div>
      </div>
    </nav>
  </div>
</div>
